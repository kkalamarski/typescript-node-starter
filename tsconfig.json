{
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs", 
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",                    
    "strict": false,                          
    "moduleResolution": "node",           
    "esModuleInterop": true,
    "noImplicitAny": false             
  },
  "lib": ["DOM", "es6"],
  "exclude": [
    "node_modules",
  ],
  "include": [
    "src/**/*"
  ],
}
